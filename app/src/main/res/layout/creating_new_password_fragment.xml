<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#47535F">
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/shopCart"
        android:layout_width="187dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/group184"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_mono_medium"
        android:text="Изменить пароль"
        android:textColor="#FFFFFF"
        android:textFontWeight="600"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Новый пароль"
        android:textColor="#A7B2BD"
        android:layout_marginStart="45dp"
        android:layout_marginTop="12dp"
        />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputNewPassword"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/input_back"
        android:hint="Новый пароль"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="13sp"
        />
    <ImageView
        android:id="@+id/passwordVisibilityToggle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-33dp"
        android:layout_marginStart="335dp"
        android:contentDescription="Toggle Password Visibility"
        android:src="@drawable/show_pass" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Повторить пароль"
        android:textColor="#A7B2BD"
        android:layout_marginStart="45dp"
        android:layout_marginTop="12dp"
        />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inputRepeatNewPassword"
        android:layout_width="335dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/input_back"
        android:hint="Повторить пароль"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="13sp"
        />
    <ImageView
        android:id="@+id/passwordVisibilityToggle2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-33dp"
        android:layout_marginStart="335dp"
        android:contentDescription="Toggle Password Visibility"
        android:src="@drawable/show_pass" />

    <Button
        android:id="@+id/acceptBtn"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"
        android:enabled="true"
        android:text="Сохранить"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        />



</LinearLayout>